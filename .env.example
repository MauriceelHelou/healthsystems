# Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# Application
ENVIRONMENT=development  # development | staging | production
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# Database
DATABASE_URL=postgresql://healthsystems_user:changeme@localhost:5432/healthsystems
DB_PASSWORD=changeme

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Neo4j Graph Database (Optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# External Data Sources (API Keys)
# Census Bureau
CENSUS_API_KEY=your-census-api-key

# CDC Data APIs
CDC_API_KEY=your-cdc-api-key

# Environmental Protection Agency
EPA_API_KEY=your-epa-api-key

# Bureau of Labor Statistics
BLS_API_KEY=your-bls-api-key

# Other Data Sources
PLACES_API_KEY=your-places-api-key

# Authentication (if implementing)
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@healthsystems.org

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE=logs/healthsystems.log

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Data Scraping
SCRAPING_ENABLED=true
SCRAPING_USER_AGENT=HealthSystemsPlatform/1.0
SCRAPING_RATE_LIMIT=1  # requests per second

# Scientific Computing
BAYESIAN_MCMC_SAMPLES=2000
BAYESIAN_MCMC_CHAINS=4
BAYESIAN_RANDOM_SEED=42

# Feature Flags
ENABLE_GRAPH_DATABASE=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_EXPORT_REPORTS=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
