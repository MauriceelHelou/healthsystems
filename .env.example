# Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# Application
ENVIRONMENT=development  # development | staging | production
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# Database
DATABASE_URL=postgresql://healthsystems_user:changeme@localhost:5432/healthsystems
DB_PASSWORD=changeme

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Neo4j Graph Database (Optional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# ====================
# External Data Sources (API Keys)
# ====================

# U.S. Census Bureau API
# Register at: https://api.census.gov/data/key_signup.html
# Datasets: ACS 5-year, Decennial Census, Economic Indicators, Population Estimates
# Provides demographic, economic, housing, and social determinant data
CENSUS_API_KEY=b65604fd7d0ed35af2b201eba907348c10c3f6d8

# CDC WONDER API (no key required)
# Access mortality, natality, cancer, and vital statistics data
# Endpoint: https://wonder.cdc.gov/controller/datarequest/
# Rate limit: 1 request per 2 minutes recommended
# Note: Only national data available via API (no state/county filtering)
CDC_WONDER_ENABLED=true
CDC_WONDER_RATE_LIMIT_SECONDS=120

# CDC Data API (for non-WONDER datasets)
# Register at: https://data.cdc.gov/profile/edit/developer_settings
# Access: BRFSS, PLACES, NHANES, chronic disease data, vaccination data
CDC_API_KEY=your-cdc-api-key

# EPA Air Quality System (AQS) API
# Register at: https://aqs.epa.gov/aqsweb/documents/data_api.html
# Provides air quality monitoring data, pollutant concentrations, environmental exposures
EPA_AQS_EMAIL=your_email@example.com
EPA_AQS_KEY=your-epa-aqs-api-key

# Bureau of Labor Statistics (BLS) API
# Register at: https://data.bls.gov/registrationEngine/
# Datasets: Employment, unemployment, wages, CPI, occupational data
BLS_API_KEY=your-bls-api-key

# CMS (Centers for Medicare & Medicaid Services) Data API
# Register at: https://data.cms.gov/
# Access healthcare utilization, quality metrics, cost data, hospital compare
CMS_API_KEY=your-cms-api-key

# HRSA Data Warehouse API
# Register at: https://data.hrsa.gov/tools/apis
# Access: HPSA designations, MUA/P, health workforce data, facility locations
HRSA_API_KEY=your-hrsa-api-key

# SAMHSA (Substance Abuse and Mental Health Services) API
# Access behavioral health treatment facilities, substance use data
SAMHSA_API_KEY=your-samhsa-api-key

# HUD (Housing and Urban Development) API
# Register at: https://www.huduser.gov/portal/dataset/api-terms.html
# Access housing assistance program data, fair market rents, income limits
HUD_API_KEY=your-hud-api-key

# USDA Food Environment Atlas / Food Access Research Atlas
# Access food access metrics, food deserts, SNAP data
USDA_API_KEY=your-usda-api-key

# CDC PLACES API (500 Cities/PLACES Project)
# Included in CDC_API_KEY above - local health data at census tract level
PLACES_API_KEY=your-cdc-api-key

# Authentication (if implementing)
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@healthsystems.org

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE=logs/healthsystems.log

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Data Scraping
SCRAPING_ENABLED=true
SCRAPING_USER_AGENT=HealthSystemsPlatform/1.0
SCRAPING_RATE_LIMIT=1  # requests per second

# Scientific Computing
BAYESIAN_MCMC_SAMPLES=2000
BAYESIAN_MCMC_CHAINS=4
BAYESIAN_RANDOM_SEED=42

# Feature Flags
ENABLE_GRAPH_DATABASE=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_EXPORT_REPORTS=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your-ga-id
