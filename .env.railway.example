# Railway Environment Variables Template
# Copy this to Railway dashboard's environment variables section

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Railway provides PostgreSQL - use the connection string from Railway dashboard
DATABASE_URL=postgresql://user:password@host:port/database
POSTGRES_USER=healthsystems
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=healthsystems_db

# ============================================
# REDIS CONFIGURATION
# ============================================
# Railway provides Redis - use the connection string from Railway dashboard
REDIS_URL=redis://default:password@host:port
REDIS_HOST=redis.railway.internal
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_V1_PREFIX=/api/v1
PROJECT_NAME=HealthSystems Platform
ENVIRONMENT=production

# Frontend
VITE_API_BASE_URL=https://your-backend.up.railway.app/api/v1
VITE_APP_NAME=HealthSystems Platform

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
SECRET_KEY=your-super-secret-key-min-32-chars-long-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (allow frontend domain)
ALLOWED_ORIGINS=https://your-frontend.up.railway.app,http://localhost:3000

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# ============================================
# AI/LLM CONFIGURATION
# ============================================
# Anthropic Claude API for literature synthesis
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096

# ============================================
# EXTERNAL DATA SOURCES
# ============================================
# Census API (optional - get free key at https://api.census.gov/data/key_signup.html)
CENSUS_API_KEY=your-census-api-key-here

# CDC Data API
CDC_API_KEY=optional-if-needed

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Log Level
LOG_LEVEL=INFO

# ============================================
# PERFORMANCE TUNING
# ============================================
# Database connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis cache TTL (seconds)
CACHE_TTL=86400

# Workers per instance
WORKERS_PER_INSTANCE=4

# ============================================
# COMPUTATION CONFIGURATION
# ============================================
# Monte Carlo simulation settings
DEFAULT_MC_RUNS=1000
MAX_MC_RUNS=10000

# Bayesian inference
MCMC_SAMPLES=2000
MCMC_TUNE=1000
MCMC_CHAINS=4

# Equilibrium solver
MAX_ITERATIONS=1000
CONVERGENCE_THRESHOLD=0.001

# ============================================
# FILE STORAGE
# ============================================
# S3-compatible storage (can use Railway volumes or external S3)
STORAGE_BACKEND=local  # or 's3'
S3_BUCKET_NAME=healthsystems-prod
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Local storage path (for Railway volumes)
UPLOAD_DIR=/app/uploads
LITERATURE_DIR=/app/literature
EXPORTS_DIR=/app/exports

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_NEO4J=false  # Set to true if using graph database
ENABLE_ACTOR_NETWORK=false  # Set to true for actor network features
ENABLE_REAL_TIME_SCRAPING=false  # Set to true for policy monitoring
